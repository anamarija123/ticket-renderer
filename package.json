{
    "name": "ticket",
    "displayName": "ticket",
    "description": "EFT POS Ticket definition file extension",
    "version": "0.0.1",
    "publisher": "LakaIndustrija",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:ticket",
        "onCommand:ticket.preview"
    ],
    "main": "./pview/ticket",
    "contributes": {
        "languages": [{
            "id": "ticket",
            "aliases": ["Ticket script", "ticket"],
            "extensions": [".tck",".ticket"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "ticket",
            "scopeName": "source.ticket",
            "path": "./syntaxes/ticket.tmLanguage.json"
        }],
        "snippets": [{
                "language": "ticket",
                "path": "./snippets/ticket.json"
        }],
        "commands": [
		    {
				"command": "ticket.preview",
				"title": "Print Preview",
				"category": "preview"
            }],
        "menus": {
            "editor/context": [
                {
                    "when": "editorLangId == ticket",
                    "command": "ticket.preview",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "ticket.preview",
                "key": "Alt+p"
            }
        ]
    }
}
